{
  "name": "tidybee-frontend",
  "version": "0.0.1",
  "description": "The front end for the TidyBee software solution",
  "author": "TidyBee",
  "private": true,
  "main": "/main.js",
  "scripts": {
    "serve": "vue-cli-service serve",
    "start": "node src/server/server.js",
    "build": "vue-cli-service build",
    "test:unit": "vue-cli-service test:unit",
    "test:e2e": "vue-cli-service test:e2e --headless --browser electron",
    "test:e2e-withoutHeadless": "vue-cli-service test:e2e",
    "lint": "vue-cli-service lint",
    "electron:serve": "electron .",
    "electron:build": "electron-builder"
  },
  "build": {
    "appId": "com.tidybee.id",
    "files": [
      "dist/**/*",
      "main.js"
    ],
    "linux": {
      "icon": "icon-256x256.png"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "icon.ico",
      "uninstallerIcon": "icon.ico"
    },
    "directories": {
      "output": "build"
    },
    "publish": [
      {
        "provider": "github"
      }
    ]
  },
  "dependencies": {
    "core-js": "^3.8.3",
    "crypto": "^1.0.1",
    "crypto-browserify": "^3.12.0",
    "express": "^4.21.0",
    "mitt": "^3.0.1",
    "os": "^0.1.2",
    "path": "^0.12.7",
    "vue": "^3.2.13",
    "vue-cookies": "^1.8.3",
    "vue-i18n": "9",
    "vue-router": "^4.0.13",
    "vuetify": "^3.4.3"
  },
  "devDependencies": {
    "@babel/core": "^7.23.5",
    "@babel/preset-env": "^7.23.5",
    "@vue/cli-plugin-babel": "~5.0.0",
    "@vue/cli-plugin-e2e-cypress": "~5.0.0",
    "@vue/cli-service": "~5.0.0",
    "@vue/test-utils": "^2.0.0-0",
    "cypress": "^9.7.0",
    "electron": "^30.0.6",
    "electron-builder": "^24.13.3",
    "prettier": "^3.1.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ]
}
